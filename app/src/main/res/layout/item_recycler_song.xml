<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="@color/md_grey_900"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_item_lista_gastos_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/portada1"
        android:layout_marginLeft="2dp"
        android:layout_alignParentLeft="true" />


    <LinearLayout
        android:id="@+id/liner_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/liner_rutas"
        android:layout_toEndOf="@+id/img_item_lista_gastos_home"
        android:gravity="start|center"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/liner_rutas"
        android:layout_toRightOf="@+id/img_item_lista_gastos_home">

        <TextView
            android:textColor="@color/md_text_white"
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="start|center"
            android:text="Nombre"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp" />

        <TextView
            android:visibility="gone"
            android:textColor="@color/md_text_white"
            android:id="@+id/txt_cantante"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="start|top"

            android:text="Accion"
            android:textSize="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner_rutas"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp">




    </LinearLayout>

</RelativeLayout>